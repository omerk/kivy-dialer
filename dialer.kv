BoxLayout:
	id: boxDialer
	orientation: 'vertical'


	BoxLayout:
		id: boxNum
		orientation: 'horizontal'
		
		TextInput:
			id: phoneNum

		Button:
			id: btnDelNum
			text: "<"
			on_press: app.delNum()


	GridLayout:
		rows: 4
		cols: 3
		
		Button:
			id: btnNum1
			text: "1"
			on_press: app.appendNum("1")
		Button:
			id: btnNum2
			text: "2"
			on_press: app.appendNum("2")
		Button:
			id: btnNum3
			text: "3"
			on_press: app.appendNum("3")


		Button:
			id: btnNum4
			text: "4"
			on_press: app.appendNum("4")
		Button:
			id: btnNum5
			text: "5"
			on_press: app.appendNum("5")
		Button:
			id: btnNum6
			text: "6"
			on_press: app.appendNum("6")


		Button:
			id: btnNum7
			text: "7"
			on_press: app.appendNum("7")
		Button:
			id: btnNum8
			text: "8"
			on_press: app.appendNum("8")
		Button:
			id: btnNum9
			text: "9"
			on_press: app.appendNum("9")


		Button:
			id: btnNumStar
			text: "*"
			on_press: app.appendNum("*")
		Button:
			id: btnNum0
			text: "0"
			on_press: app.appendNum("0")
		Button:
			id: btnNumHash
			text: "#"
			on_press: app.appendNum("#")


	Button:
		text: "Call"
		on_press: app.callNum()

	BoxLayout:
		id: boxPanes
		orientation: 'horizontal'

		Button:
			id: btnContacts
			text: "Contacts"
			on_press: app.switchPane("contacts")
		
		Button:
			id: btnDialer
			on_press: app.switchPane("dialer")
			text: "Dialer"

		Button:
			id: btnHistory
			on_press: app.switchPane("history")
			text: "History"

